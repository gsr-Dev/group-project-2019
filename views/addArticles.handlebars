<script src="/js/summernote-add.js"></script>

<div class="container">


    <div class="header" class="text-center border border-light p-5">
        <h1 style="margin-top: 20px;">Post your Article </h1>
    </div>

    <div id="articles" class="panel">
        <a role="button" class="btn btn-success mr-auto" href="./myArticles">Back to My Articles</a>
        <p>Preview your articles below:</p>
        <div id="title-inner">
            <br>
        </div>
        <div id="article-inner">
            <br>
        </div>


        <form action="/addArticles" method="POST">
            <h3>Article Title:</h3>
            <input class="form-control mb-4" type="text" name="title" id="title" required>
            <textarea class="form-control" id="summernote" name="editordata"></textarea>
            <button id="save" class="btn btn-primary upload" type="submit">Save</button>
        </form>
    </div>
</div>