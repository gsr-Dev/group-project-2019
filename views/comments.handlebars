<div class="container" style="margin-top: 50px;">

    <div class="row">

        <div class="col-xl-8 col-md-12 mx-auto">
            <h1>{{article.title}}</h1>
            <h6>{{article.date}}</h6>
            <div>{{{article.content}}}</div>
            <br>
            <button id="darkButtons" class="btn btn-outline-warning" data-toggle="collapse"
                data-target="#collapseExample">Comment</button>
        </div>
        <div class="col-xl-8 col-md-12 mx-auto">
            <div class="collapse" id="collapseExample">
                <form action="./comments" method="POST" style="margin-top: 20px;">
                    <textarea name="comment" id="" rows="4" style="width:100%"></textarea>
                    <input type="hidden" name="articlesId" value="{{article.id}}">
                    <button type="submit" class="btn btn-warning">Save</button>
                    <button type="button" class="btn btn-secondary" data-target="#collapseExample"
                        data-toggle="collapse">Close</button>
                </form>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-xl-8 col-md-12 mx-auto">
            {{#each comments}}

            <div class="card">

                <div class="card-body">
                    <div class="row">

                        <div class="col-md-2">

                            <img src="./images/thumbnails/{{this.image}}" class="img img-rounded img-fluid" />
                            <p style="text-align:center">{{this.username}}</p>
                            <p class="text-secondary text-center">{{../article.date}}</p>

                        </div>

                        <div class="col-md-10">
                            <p>{{this.content}}</p>
                        </div>

                    </div>






                    <div class="row">
                        <div class="col-md-2">
                            <div class="btn-toolbar">

                                <button type="button" class="btn btn-danger" data-toggle="modal"
                                    data-target="#exampleModal">
                                    Delete</button>

                                <!-- Modal -->

                                <div class="modal fade" id="exampleModal">

                                    <div class="modal-dialog">

                                        <div class="modal-content">
                                            <form action="/comments.delete" method="POST">
                                                <input type="hidden" name="commentID" value="{{this.id}}">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Deleting comment...
                                                    </h5>
                                                    <button type="button" class="close" data-dismiss="modal">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Are you sure you want to delete this comment?</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-dismiss="modal">Close</button>
                                                    <button class="btn btn-danger" type="submit">Delete</button>
                                                </div>
                                            </form>

                                        </div>

                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>



                </div>
            </div>
            {{/each}}

        </div>
    </div>

</div>