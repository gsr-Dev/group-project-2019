{{! Display a message if one was provided. }}
<div class="container mx-8">
  {{#if message}}
  <div class="alert alert-info alert-dismissible fade show" role="alert" style="margin-top: 20px;">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    {{message}}
  </div>
  {{/if}}
</div>

<main class="container">
  {{#each articles}}
  <div class="row">
    <section class="card shadow-sm p-3 mb-5 bg-white rounded" data-aos="fade-down">
      <div class="card-header">
        <a href="./comments?message={{this.id}}" class="card-body" style="margin: auto">
          <h1>{{this.title}}</h1>
          <h6>Author: {{this.username}}</h6>
          <h6>{{this.date}}</h6>
      </div>
      <div class="card-body">{{{this.content}}}</div>
      </a>

    </section>
  </div>
  {{/each}}
</main>