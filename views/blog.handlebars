{{! Display a message if one was provided. }}
<div class="container mx-8">
  {{#if message}}
  <div class="alert alert-dismissible fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    {{message}}
  </div>
  {{/if}}
</div>





<main class="container">
  {{#each articles}}
  <div class="row">
    <section class="card shadow-sm p-3 mb-5 bg-white rounded" data-aos="fade-down">

      <div class="card-header">
        <a href="./comments?message={{this.id}}" class="card-body" style="margin: auto;">
          <h1>{{this.title}}</h1>
          <h6>{{this.date}}</h6>
          <div class="card-body" style="margin: auto;">{{{this.content}}}</div>
        </a>
      </div>


    </section>
  </div>
  {{/each}}
</main>