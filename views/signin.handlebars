
<div class="container" style="margin-top: 50px;">

    {{! Display a message if one was provided. }}
    <div class="container mx-8">
    {{#if message}}
    <div class="alert alert-success alert-dismissible fade show">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        {{message}}, you can click here to <a href="./signup" class="alert-link">Sign Up</a>
    </div>
    {{/if}}
    </div>
     
    <form action="./signin" method="POST" class="border border-warning text-center mr-2 py-2 px-2">
        
        <p class="h1 mb-4">Sign in</p>
        <div class="flex-col mb">
            <label for="txtUsername">Username:</label>
            <input class="form-control mb-4" type="text" name="username" id="txtUsername" required>
        </div>

        <div class="flex-col mb">
            <label for="txtPassword">Password:</label>
            <input class="form-control mb-4" type="password" name="password" id="txtPassword" required>
        </div>

        <div class="flex-row justify-sb align-center">
            <button id="allButtons" type="submit" class="btn btn-outline-warning">Sign in</button>
        </div>

        <div class="flex-col mb">
            <a id="forgotPassword" href="./forgotpsw">Forgot Password?</a>
        </div>
     </form> 
</div>
